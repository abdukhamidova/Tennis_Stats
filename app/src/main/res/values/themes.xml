<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TenniStats" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="buttonStyle">@style/our_button</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowBackground">@color/app_bg_color</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="Theme.TenniStats" parent="Base.Theme.TenniStats" />

    <style name="our_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/app_btnText_color</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">0.9</item>
    </style>
</resources>