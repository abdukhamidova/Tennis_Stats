<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TenniStats" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorPrimaryDark">@color/blue2</item>
        <item name="buttonStyle">@style/our_button</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowBackground">@color/darkest_blue</item>
    </style>

    <style name="Theme.TenniStats" parent="Base.Theme.TenniStats" />

    <style name="LaunchingWindowTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/launching_window</item>
    </style>
    <!--styl domyślny button-->
    <style name="our_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/app_btnText_color</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--styl dla tablic wynikowych-->
    <style name="scoreTableTextAppearance">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:textColor">@color/item_textColor</item>
    </style>
    <!--styl dla tablic w view matches-->
    <style name="matchTableTextAppearance">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:textColor">@color/item_textColor</item>
    </style>

    <!--styl dla koloru playera1-->
    <style name="player1TextAppearance">
        <item name="android:textColor">@color/app_player1_color</item>
        <item name="android:gravity">center</item>
    </style>
    <!--styl dla koloru playera2-->
    <style name="player2TextAppearance">
        <item name="android:textColor">@color/app_player2_color</item>
        <item name="android:gravity">center</item>
    </style>

    <!--styl dla statystyk-->
    <style name="scrollViewTextAppearance">
        <item name="android:textAlignment">center</item>
    </style>
    <!--styl dla buttonów nawigacyjnych dla view activity-->
    <style name="navigation_button" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/rectangle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationViewTheme" >
        <item name="backgroundTint">@color/app_bg_color</item>
        <item name="android:listDivider">@color/dark_blue</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="elevation">20dp</item>
        <item name="itemTextColor">@color/menu_textColor</item>
        <item name="itemIconTint">@color/menu_textColor</item>
        <item name="dividerInsetStart">45dp</item>
    </style>
</resources>