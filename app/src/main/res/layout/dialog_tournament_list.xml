<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@color/dialog_bg_color">

    <TextView
        android:id="@+id/textViewChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_gravity="center"
        android:text="@string/list_of_tournaments"
        android:textColor="@color/dialog_textTitle_color"
        android:textSize="@dimen/_23ssp"
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_2sdp">
        <LinearLayout
            android:id="@+id/playersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_11sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_10sdp">
        <Button
            android:id="@+id/buttonAddTournamentCalendar"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dialog_textTitle_color"
            android:text="@string/add_event"
            android:textColor="@color/dialog_text_color"
            android:textSize="@dimen/_14ssp"  />
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/buttonAddTournamentCalendar"
            android:background="@drawable/border_button"
            android:text="@string/cancel"
            android:textColor="@color/dialog_btnCancel"
            android:textSize="@dimen/_14ssp"  />
    </RelativeLayout>
</LinearLayout>
