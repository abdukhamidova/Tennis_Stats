<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".tournament.UpdateEditMatchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textAddDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE DETAILS"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/_30ssp"
            app:layout_constraintBottom_toTopOf="@id/layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.00999999" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textAddDetails"
            app:layout_constraintStart_toStartOf="@id/textAddDetails"
            app:layout_constraintTop_toBottomOf="@id/textAddDetails">

            <!-- Player 1 Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Player 1"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginEnd="@dimen/_10sdp" />

                <Spinner
                    android:id="@+id/SpinnerPlayer1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_weight="0.7"
                    android:hint="Player name"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <!-- Player 2 Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Player 2"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginEnd="@dimen/_10sdp" />

                <Spinner
                    android:id="@+id/SpinnerPlayer2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_weight="0.7"
                    android:hint="Player name"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <!-- Score Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textColor="@color/general_text_color"
                android:textSize="@dimen/_16ssp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <!-- Repeated rows for scores -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1:"
                        android:textSize="@dimen/_15ssp" />

                    <Spinner
                        android:id="@+id/set1p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />

                    <Spinner
                        android:id="@+id/set1p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2:"
                        android:textSize="@dimen/_15ssp" />

                    <Spinner
                        android:id="@+id/set2p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />

                    <Spinner
                        android:id="@+id/set2p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3:"
                        android:textSize="@dimen/_15ssp" />

                    <Spinner
                        android:id="@+id/set3p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />

                    <Spinner
                        android:id="@+id/set3p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_37sdp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/_99sdp"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:backgroundTint="@color/darker_blue"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="@dimen/_99sdp"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:backgroundTint="@color/darker_blue"
                android:text="Reject"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="@dimen/_99sdp"
                android:layout_height="@dimen/_36sdp"
                android:backgroundTint="@color/darker_blue"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/app_bg_color"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        app:itemIconPadding="@dimen/_15sdp"
        app:itemHorizontalPadding="@dimen/_23sdp" />

</androidx.drawerlayout.widget.DrawerLayout>
