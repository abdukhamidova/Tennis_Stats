<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".tournament.EditMatchActivity"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        tools:ignore="HardCodedText">
        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/textAddDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD DETAILS"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/_30ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textAddDetails"
            app:layout_constraintStart_toStartOf="@id/textAddDetails"
            app:layout_constraintTop_toBottomOf="@id/textAddDetails"
            app:layout_constraintVertical_bias="0.0">

            <!--<LinearLayout
                android:id="@+id/linearLayoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date_item"
                    android:textColor="@color/item_textColor"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewDateVM"
                    android:layout_width="@dimen/_165sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:gravity="end"
                    android:text="12.01.2024 15:28d"
                    android:textColor="@color/item_textColor"
                    android:textSize="@dimen/_17sdp" />
            </LinearLayout>--> <!--date field-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/general_text_color"
                    android:layout_marginEnd="@dimen/_10sdp"/>

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewPlayer1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:backgroundTint="@color/general_text_color"
                    android:completionHintView="@color/general_text_color"
                    android:hint="Player name"
                    android:drawableStart="@drawable/icon_person"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableTint="@color/app_hint_color"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/general_text_color"
                    android:textColorHint="@color/app_hint_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/general_text_color"
                    android:layout_marginEnd="@dimen/_10sdp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewPlayer2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:backgroundTint="@color/general_text_color"
                    android:completionHintView="@color/general_text_color"
                    android:hint="Player name"
                    android:drawableStart="@drawable/icon_person"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableTint="@color/app_hint_color"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/general_text_color"
                    android:textColorHint="@color/app_hint_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Score:"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/textViewPlayMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Play match"
                    android:textColor="@color/accent_text_color"
                    android:textSize="@dimen/_17ssp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="Player1"
                        android:textSize="@dimen/_15ssp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="Player2"
                        android:textSize="@dimen/_15ssp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.2"
                        android:text="set1:"
                        android:textSize="@dimen/_15ssp"/>

                    <EditText
                        android:id="@+id/set1p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="0"
                        android:textSize="@dimen/_15ssp"/>

                    <EditText
                        android:id="@+id/set1p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="0"
                        android:textSize="@dimen/_15ssp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.2"
                        android:text="set2:"
                        android:textSize="@dimen/_15ssp"/>
                    <EditText
                        android:id="@+id/set2p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="0"
                        android:textSize="@dimen/_15ssp"/>

                    <EditText
                        android:id="@+id/set2p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="0"
                        android:textSize="@dimen/_15ssp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.2"
                        android:text="set2:"
                        android:textSize="@dimen/_15ssp"/>
                    <EditText
                        android:id="@+id/set3p1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="None"
                        android:textSize="@dimen/_15ssp"/>

                    <EditText
                        android:id="@+id/set3p2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="0.4"
                        android:text="None"
                        android:textSize="@dimen/_15ssp"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/linearLayoutNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/textViewNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Additional note"
                    android:textColor="@color/general_text_color"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/textViewSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Save"
                    android:textColor="@color/accent_text_color"
                    android:textSize="@dimen/_17ssp" />
            </LinearLayout>
            <!--additional notes-->
            <EditText
                android:id="@+id/editTextNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="text"
                android:gravity="top"
                android:hint="To zostawić i zsynchronizować z notatkami meczu czy usunąć? A ustawienia wyniku setu meczu zrobic jako litę rozwijaną? czy pojedyncze gemu też będzie można ustawiać?"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:lines="13"
                android:overScrollMode="always"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColorHint="@color/app_hint_color"
                android:textSize="@dimen/_15ssp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/app_bg_color"
        android:theme="@style/NavigationViewTheme"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        app:itemIconPadding="@dimen/_15sdp"
        app:itemHorizontalPadding="@dimen/_23sdp"/>

</androidx.drawerlayout.widget.DrawerLayout>