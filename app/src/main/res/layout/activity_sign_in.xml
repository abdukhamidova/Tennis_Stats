<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/kolor_tla">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32">

        <TextView
            android:id="@+id/textLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/kolor_nazw_tytul"
            android:textSize="40sp"
            android:gravity="center"/> <!--Login-->

        <EditText
            android:id="@+id/textEmailSignIn"
            android:layout_width="302dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:autofillHints="emailAddress"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="@string/enter_e_mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/kolor_hint"/> <!--e-mail-->

        <EditText
            android:id="@+id/textPasswordSignIn"
            android:layout_width="302dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColorHint="@color/kolor_hint" /> <!--password-->

        <Button
            android:id="@+id/buttonLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/log_in"
            android:textSize="19sp" /> <!--log in-->

        <TextView
            android:id="@+id/textNotSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/i_m_not_signed_up"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintVertical_bias="0" /> <!--sign up-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>