<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewShowMoreActivity"
    android:background="@color/kolor_tla">

    <Button
        android:id="@+id/buttonMenuSHM"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="@string/menu"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        app:shapeAppearance="@style/CardView"/>

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:contentDescription="@string/back_button" />


    <TableLayout
        android:id="@+id/tableLayoutSM"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@color/kolor_tabeli"
        android:theme="@style/MyTextAppearance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TableRow>

            <TextView
                android:id="@+id/textViewBallPl1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="4dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ball" />

            <TextView
                android:id="@+id/textviewPlayer1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/textViewSet1Pl1"
                android:layout_height="match_parent"
                android:text=""  />

            <TextView
                android:id="@+id/textViewSet2Pl1"
                android:layout_height="match_parent"
                android:text="" />

            <TextView
                android:id="@+id/textViewSet3Pl1"
                android:layout_height="match_parent"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textViewBallPl2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="4dp"
                android:visibility="invisible"
                app:drawableStartCompat="@drawable/ball"/>

            <TextView
                android:id="@+id/textviewPlayer2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/textViewSet1Pl2"
                android:layout_height="match_parent"
                android:text=""/>

            <TextView
                android:id="@+id/textViewSet2Pl2"
                android:layout_height="match_parent"
                android:text=""/>

            <TextView
                android:id="@+id/textViewSet3Pl2"
                android:layout_height="match_parent"
                android:text=""/>
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listViewHistoriaMeczu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tableLayoutSM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>