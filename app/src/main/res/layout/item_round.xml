<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/_3sdp"
    tools:ignore="HardcodedText"
    app:cardCornerRadius="@dimen/_7sdp"
    android:backgroundTint="@color/dirty_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_5sdp">

        <include
            android:id="@+id/vsPlayers1"
            layout="@layout/item_vs_players"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignStart="@id/vsPlayers1"
            android:layout_alignTop="@id/vsPlayers1"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/black" />

        <include
            android:id="@+id/vsPlayers2"
            layout="@layout/item_vs_players"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vsPlayers1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_alignStart="@id/vsPlayers2"
            android:layout_alignTop="@id/vsPlayers2"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_58sdp"
            android:background="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/vsPlayers1"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
