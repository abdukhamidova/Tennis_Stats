<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBallInPlay"
    android:background="#073159">

    <Button
        android:id="@+id/buttonMenuBIP"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginTop="0.5dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="MENU"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:shapeAppearance="@style/CardView" />

    <TextView
        android:id="@+id/textMatchTimeBIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:fontFamily="@font/aldrich"
        android:text="MATCH TIME: "
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <ImageButton
        android:id="@+id/imageButtonBackBIP"
        android:layout_width="77dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="626dp"
        android:fontFamily="@font/aldrich"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="#D8D85D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TableRow>

            <TextView
                android:id="@+id/textViewServe1BIP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textviewPlayer1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set1BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set2BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set3BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1PktBIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewServe2BIP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textviewPlayer2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set1BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set2BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set3BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2PktBIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textPL1"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <TextView
        android:id="@+id/textPL2"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aldrich"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonWinner2"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/buttonWinner1"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <View
        android:id="@+id/view3"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWinner2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Winner"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonForcedError2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Forced Error"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWinner2"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonUnforcedError2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Unforced Error"
        android:textSize="19.2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForcedError2"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonWinner1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Winner"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonForcedError1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Forced Error"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWinner1"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonUnforcedError1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#65BECA"
        android:fontFamily="@font/aldrich"
        android:text="Unforced Error"
        android:textSize="19.2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForcedError1"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

</androidx.constraintlayout.widget.ConstraintLayout>