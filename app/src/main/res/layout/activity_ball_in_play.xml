<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBallInPlay">

    <Button
        android:id="@+id/buttonMenuBIP"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="0.5dp"
        android:text="@string/menu"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:shapeAppearance="@style/CardView" />

    <ImageButton
        android:id="@+id/imageButtonBackBIP"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@color/kolor_tabeli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TableRow>

            <TextView
                android:id="@+id/textViewServe1BIP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textviewPlayer1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set1BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set2BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1Set3BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer1PktBIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewServe2BIP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textviewPlayer2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set1BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set2BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2Set3BIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPlayer2PktBIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:padding="15dp"
                android:text=""
                android:textSize="15sp" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textPL2"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aldrich"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="340dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonWinner2"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/buttonWinner1"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/buttonWinner2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/winner"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonUnforcedError2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/unforced_error"
        android:textSize="19.2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForcedError2"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonWinner1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/winner"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonForcedError2"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/forced_error"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWinner2"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <Button
        android:id="@+id/buttonForcedError1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/forced_error"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWinner1"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

    <TextView
        android:id="@+id/textPL1"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <View
        android:id="@+id/view3"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:id="@+id/buttonUnforcedError1"
        android:layout_width="143dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:text="@string/unforced_error"
        android:textSize="19.2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonForcedError1"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/CardView" />

</androidx.constraintlayout.widget.ConstraintLayout>