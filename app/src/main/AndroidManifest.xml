<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".stats.StatsClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TenniStats"
        tools:targetApi="31">
        <activity
            android:name=".player.DeletePlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dialog.DeleteMatchDialog"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".player.AddPlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".player.PlayerDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".stats.ViewHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".stats.ViewStatsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".player.ViewPlayerActivity"
            android:exported="false"
            android:label="@string/title_activity_view_player"
            android:theme="@style/Theme.TenniStats"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ViewMatchesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".matchplay.EndOfMatchActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".matchplay.BallInPlayDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".matchplay.BallInPlayActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".matchplay.StartPointActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".matchplay.ServeActivity"
            android:exported="false"
            android:parentActivityName=".matchplay.StartNewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mainpage.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mainpage.SignInActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ActivityMatchShortSummary"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mainpage.MenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mainpage.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".stats.Head2HeadActivity"
            android:exported="true"/>
        <activity
            android:name=".matchplay.StartNewActivity"
            android:exported="false"
            android:parentActivityName=".mainpage.MenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".player.ViewTeamActivity">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>